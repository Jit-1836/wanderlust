<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3">signUp on wanderlust</h1>
  <div class="col-8 offset-2">
    <form
      action="/signup"
      method="post"
      class="needs-validation"
    >
      <div class="mb-3">
        <label
          for="username"
          class="form-label"
          >username</label
        >
        <input
          type="text"
          name="username"
          id="username"
          required
          class="form-control"
        />
        <div class="valid-feedback">looks good!</div>
      </div>
      <div class="mb-3">
        <label
          for="email"
          class="form-label"
          >email</label
        >
        <input
          type="email"
          name="email"
          id="email"
          required
          class="form-control"
        />
      </div>
      <div class="mb-3">
        <label
          for="password"
          class="form-label"
          >Password</label
        >
        <input
          type="password"
          name="password"
          id="password"
          required
          class="form-control"
        />
      </div>
      <button class="btn btn-success">signUp</button>
    </form>
  </div>
</div>
